<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecondScreen" parent="Theme.MaterialComponents.DayNight.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- System bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="buttonStyle">@style/SlimButton</item>
        <item name="popupMenuStyle">@style/SlimPopupMenu</item>
    </style>

    <style name="Theme.SecondScreen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Overlay" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="buttonStyle">@style/SlimButton</item>
        <item name="popupMenuStyle">@style/SlimPopupMenu</item>
    </style>

    <style name="Theme.Overlay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Launcher" parent="Theme.Overlay">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Theme.Launcher.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>